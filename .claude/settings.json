{
 "hooks": {
   "UserPromptSubmit": [
     {
       "matcher": "",
       "hooks": [
         {
           "type": "command",
           "command": "./.claude/hooks/post-prompt-context.sh"
         }
       ]
     }
   ],
   "Stop": [
     {
       "matcher": "",
       "hooks": [
         {
           "type": "command",
           "command": "powershell.exe -Command \"(New-Object Media.SoundPlayer (Resolve-Path '.claude\\audio\\completion.wav')).PlaySync()\""
         }
       ]
     },
     {
       "matcher": "",
       "hooks": [
         {
           "type": "command",
           "command": "afplay .claude/audio/completion.wav 2>/dev/null || true"
         }
       ]
     }
   ]
 },
 "permissions": {
   "allow": [
     "Bash(say:*)"
   ]
 }
}