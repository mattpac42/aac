{
  "model": "opus",
  "hooks": {
   "UserPromptSubmit": [
     {
       "matcher": "",
       "hooks": [
         {
           "type": "command",
           "command": "./.claude/hooks/post-prompt-context.sh"
         }
       ]
     }
   ],
   "Stop": [
     {
       "matcher": "",
       "hooks": [
         {
           "type": "command",
           "command": "./.claude/hooks/completion-one-liners.sh 2>/dev/null || true"
         }
       ]
     }
   ]
 },
 "permissions": {
   "allow": [
     "Bash(say:*)"
   ]
 }
}